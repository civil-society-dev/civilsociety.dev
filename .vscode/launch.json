{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hugo Server",
            "type": "node-terminal",
            "request": "launch",
            "command": "hugo server -D",
            "cwd": "${workspaceFolder}",
            "serverReadyAction": {
                "pattern": "Web Server is available at //localhost:(\\d+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}